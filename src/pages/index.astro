---
// TODO: codigo del servidro (server only) - Momento de construccion BUILD
import MainLayout from "@layouts/MainLayout.astro";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";
import PokemonCard from "@components/pokemon/PokemonCard.astro";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = (await resp.json()) as PokemonListResponse;

const title = "Pokémon Static | Home";
---

<MainLayout title={title}>
  <h1 class="text-3xl">Listado de Pokémons</h1>
  <hr />

  <section
    aria-label="Listado de pokemons"
    class="grid grid-cols1 sm:grid-cols-4 md:grid-cols-5 gap-4 mt-5"
  >
    {data.results.map((pokemon) => <PokemonCard {...pokemon} />)}
  </section>
</MainLayout>
